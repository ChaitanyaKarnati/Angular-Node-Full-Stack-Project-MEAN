{
    "extends": "tslint-config-airbnb",
    "rules": {
        "radix": false,
        "max-line-length": [
            true,
            120
        ],
        "one-variable-per-declaration": false,
        "no-increment-decrement": false,
        "no-boolean-literal-compare":false,
        "no-parameter-reassignment": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}